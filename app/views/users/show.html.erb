<div class="sidebar">
  <!-- サイドバーの内容をここに追加します -->
  <h2>メニュー</h2>
  <ul>
    <li><%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger ml-2' %></li>
  </ul>
</div>

<h1>マイページ</h1>

<div class="main-content">
  <div class="content">
    <h2>ユーザー名</h2>
    <p><%= @user.name %></p>

    <h2>メールアドレス</h2>
    <p><%= @user.email %></p>

    <h2>持っている調理器具</h2>
    <ul>
      <% @kitchen_tools.each do |tool| %>
        <li><%= tool.name %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="recipe-show">
  <div class="recipe-header">
    <p>
      <strong>レシピ名:</strong>
      <%= @recipe.title %>
    </p>

    <p>
      <strong>完成写真:</strong>
      <%= image_tag @recipe.dish_image.url, size: "100x100" if @recipe.dish_image.present? %>
    </p>
  </div>

  <div class="recipe-section">
    <h3>調理工程</h3>
    <% @recipe.recipe_steps.each do |step| %>
      <div class="recipe-step">
        <p>
          <strong>工程:</strong>
          <%= step.text %>
        </p>
        <% if step.step_image.present? %>
          <p>
            <%= image_tag step.step_image.url, size: "100x100" %>
          </p>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="recipe-section">
    <h3>必要な調理器具</h3>
    <ul>
      <% @recipe.kitchen_tools.each do |tool| %>
        <li><%= tool.name %></li>
      <% end %>
    </ul>
  </div>

  <div class="recipe-section">
    <h3>用意する材料+調味料</h3>
    <ul>
      <% @recipe.ingredients.each do |ingredient| %>
        <li><%= ingredient.name %></li>
      <% end %>
    </ul>
  </div>

  <div class="recipe-actions">
    <%= link_to t('foodstuffs.back_to_list'), root_path, class: 'btn btn-secondary' %>
    <% if @recipe.user == current_user %>
      <%= link_to 'レシピを編集する', edit_recipe_path(@recipe), class: 'btn btn-primary' %>
      <%= button_to 'レシピを削除する', recipe_path(@recipe), method: :delete, data: { turbo_confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
      <!--[turbo_confirm: '本当に削除しますか？]が反応していないので修正用-->
    <% end %>
  </div>

  <h2>Comments</h2>

  <% if user_signed_in? %>
    <%= form_with(model: [ @recipe, @recipe.comments.build ], local: true, class: "new-comment-form" ) do |form| %>
      <div class="field">
        <%= form.label :body %>
        <%= form.text_area :body %>
      </div>
      <div class="actions">
        <%= form.submit "Add Comment", class: "btn btn-primary" %>
      </div>
    <% end %>
  <% end %>

  <div class="comments">
    <% @recipe.comments.each do |comment| %>
      <% if comment.user.present? %>
        <div class="comment">
          <p>
            <strong><%= comment.user.name %>:</strong>
            <%= comment.body %>
          </p>
          <% if user_signed_in? && comment.user == current_user %>
            <%= button_to '×', [@recipe, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
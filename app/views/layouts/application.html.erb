<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" rel="stylesheet">
    <%= javascript_importmap_tags %>
  </head>

<body>
  <header class="fixed-top bg-white shadow-sm">
    <%= render 'layouts/header' %>
  </header>

  <% if @show_tabs %>
    <div class="container mt-5 pt-4">
      <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
          <a class="nav-link <%= 'active' if @view == 'both' %>" href="<%= home_view_path(view: 'both') %>">両方</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= 'active' if @view == 'recipes' %>" href="<%= home_view_path(view: 'recipes') %>">レシピ</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= 'active' if @view == 'foodstuffs' %>" href="<%= home_view_path(view: 'foodstuffs') %>">食品</a>
        </li>
      </ul>
    </div>
  <% end %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <% if @use_sidebar %>
    <div class="sidebar">
      <%= render 'users/sidebar' %>
    </div>
    <div class="container" style="margin-left: 250px;">
      <div class="main-content">
        <%= yield %>
      </div>
    </div>
  <% elsif @use_split_layout %>
    <div class="container">
      <div class="left-side">
        <%= yield :left %>
      </div>
      <div class="right-side">
        <%= yield :right %>
      </div>
    </div>
  <% else %>
    <div class="container">
      <%= yield %>
    </div>
  <% end %>

  <footer>
    <%= render 'layouts/footer' %>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

  <%= javascript_include_tag 'recipes' %>
  <%= javascript_include_tag 'foodstuffs' %>
</body>


</html>

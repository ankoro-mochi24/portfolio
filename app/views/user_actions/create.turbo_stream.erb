<%#
action_type: bookmark/good/bat
actionable_type: recipe/foodstuff
actionable_id: recipe.id/foodstuff.id
%>
<%= turbo_stream.replace "#{dom_id(@user_action.actionable)}_#{@user_action.action_type}_actions" do %>
  <%= render partial: 'shared/user_action', locals: { actionable: @user_action.actionable, action_type: @user_action.action_type } %>
<% end %>

<% if @user_action.action_type == 'good' %>
  <%= turbo_stream.replace "#{dom_id(@user_action.actionable)}_bat_actions" do %>
    <%= render partial: 'shared/user_action', locals: { actionable: @user_action.actionable, action_type: 'bat' } %>
  <% end %>
<% elsif @user_action.action_type == 'bat' %>
  <%= turbo_stream.replace "#{dom_id(@user_action.actionable)}_good_actions" do %>
    <%= render partial: 'shared/user_action', locals: { actionable: @user_action.actionable, action_type: 'good' } %>
  <% end %>
<% end %>

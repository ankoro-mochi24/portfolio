<%= form_with(model: [commentable, commentable.comments.build], remote: true, data: { turbo_frame: dom_id(commentable) }) do |form| %>
  <div class="field">
    <%= form.label :body, "コメント" %>
    <%= form.text_area :body %>
  </div>
  <div class="actions">
    <%= form.submit "コメントを追加" %>
  </div>
<% end %>

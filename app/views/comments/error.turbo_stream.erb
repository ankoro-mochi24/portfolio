<%= turbo_stream.replace "comment_form" do %>
  <div id="comment_form">
    <%= form_with(model: [@commentable, @comment], local: true) do |form| %>
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, class: 'form-control' %>
        <% if @comment.errors.any? %>
          <div class="errors">
            <ul>
              <% @comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
      <%= form.hidden_field :commentable_type, value: @commentable.class.name %>
      <%= form.hidden_field :commentable_id, value: @commentable.id %>
      <%= form.submit 'コメントを投稿する', class: 'btn btn-primary' %>
    <% end %>
  </div>
<% end %>

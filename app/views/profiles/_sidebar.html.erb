<div class="sidebar">
  <h2><%= t('sidebar.profile.menu') %></h2>
  <ul class="list-group">
    <li class="list-group-item <%= 'active' if current_page?(profile_path) %>">
      <%= link_to t('sidebar.profile.user_info'), profile_path %>
    </li>
    <li class="list-group-item <%= 'active' if current_page?(posts_profile_path) %>">
      <%= link_to t('sidebar.profile.posts'), posts_profile_path %>
    </li>
    <li class="list-group-item">
      <%= button_to t('sidebar.profile.logout'), destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'btn btn-outline-danger' %>
    </li>
  </ul>
</div>

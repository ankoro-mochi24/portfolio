
<div class="row">
  <div class="col-md-3">
    <%= render 'profiles/sidebar' %>
  </div>
  <div class="col-md-9">
    <div class="main-content">
      <h1><%= t('profiles.show.title') %></h1>
      <div class="content">
        <h2><%= t('profiles.show.username') %></h2>
        <p><%= @user.name %></p>

        <h2><%= t('profiles.show.email') %></h2>
        <p><%= @user.email %></p>

        <h2><%= t('profiles.show.kitchen_tools') %></h2>
        <% if @kitchen_tools.present? %>
          <ul>
            <% @kitchen_tools.each do |tool| %>
              <li><%= tool.name %></li>
            <% end %>
          </ul>
        <% else %>
          <p><%= t('profiles.show.no_kitchen_tools') %></p>
        <% end %>

        <h2><%= t('profiles.show.line_notify') %></h2>
        <% if current_user.line_notify_token.present? %>
          <%= link_to t('profiles.show.line_notify_unlink'), line_notify_unlink_path, data: { turbo_method: :delete }, class: "btn btn-danger" %><br>
        <% else %>
          <%= link_to t('profiles.show.line_notify_link'), line_notify_authorize_path, class: "btn btn-primary" %><br>
        <% end %>

        <%= link_to t('profiles.show.edit'), edit_profile_path, class: 'btn btn-primary mt-3' %>
      </div>
    </div>
  </div>
</div>
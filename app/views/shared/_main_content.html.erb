<div class="row justify-content-center">
  <% if @view == 'both' %>
    <div class="col-md-6 mx-auto text-center">
      <h1><%= t('recipes.index.title') %></h1>
      <div id="recipes">
        <% if @recipes.present? %>
          <% @recipes.each do |recipe| %>
            <%= render recipe %>
          <% end %>
          <%= paginate @recipes %>
        <% else %>
          <p><%= t('recipes.index.no_results') %></p>
        <% end %>
      </div>
    </div>
    <div class="col-md-6 mx-auto text-center">
      <h1><%= t('foodstuffs.index.title') %></h1>
      <div id="foodstuffs">
        <% if @foodstuffs.present? %>
          <% @foodstuffs.each do |foodstuff| %>
            <%= render foodstuff %>
          <% end %>
          <%= paginate @foodstuffs %>
        <% else %>
          <p><%= t('foodstuffs.index.no_results') %></p>
        <% end %>
      </div>
    </div>
  <% elsif @view == 'recipes' %>
    <div class="col-md-8 mx-auto text-center">
      <h1><%= t('recipes.index.title') %></h1>
      <div id="recipes">
        <% if @recipes.present? %>
          <% @recipes.each do |recipe| %>
            <%= render recipe %>
          <% end %>
          <%= paginate @recipes %>
        <% else %>
          <p><%= t('recipes.index.no_results') %></p>
        <% end %>
      </div>
    </div>
  <% elsif @view == 'foodstuffs' %>
    <div class="col-md-8 mx-auto text-center">
      <h1><%= t('foodstuffs.index.title') %></h1>
      <div id="foodstuffs">
        <% if @foodstuffs.present? %>
          <% @foodstuffs.each do |foodstuff| %>
            <%= render foodstuff %>
          <% end %>
          <%= paginate @foodstuffs %>
        <% else %>
          <p><%= t('foodstuffs.index.no_results') %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

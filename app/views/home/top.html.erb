<% content_for(:title, "入口") %>

<div class="container">
  <p>Home#top</p>

  <div class="row">
    <div class="col-md-6">
      <% content_for :left do %>
        <h1><%= t('recipes.index.title') %></h1>
        <div id="recipes">
          <% @recipes.each do |recipe| %>
            <%= render recipe %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <% content_for :right do %>
        <h1><%= t('foodstuffs.index.title') %></h1>
        <div id="foodstuffs">
          <% @foodstuffs.each do |foodstuff| %>
            <%= render foodstuff %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

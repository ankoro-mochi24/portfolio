<% content_for(:title, "入口") %>

<div class="container">
  <p>Home#top</p>

  <div class="row">
    <div class="col-md-6">
      <% content_for :left do %>
        <h1><%= t('recipes.index.title') %></h1>
        <div id="recipes">
          <% if @recipes.present? %>
            <% @recipes.each do |recipe| %>
              <%= render recipe %>
            <% end %>
          <% else %>
            <p>該当するレシピが見つかりませんでした。</p>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <% content_for :right do %>
        <h1><%= t('foodstuffs.index.title') %></h1>
        <div id="foodstuffs">
          <% if @foodstuffs.present? %>
            <% @foodstuffs.each do |foodstuff| %>
              <%= render foodstuff %>
            <% end %>
          <% else %>
            <p>該当する食品が見つかりませんでした。</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="sidebar">
  <h2><%= t('sidebar.home.filter') %></h2>
  <turbo-frame id="filter_counts">
    <ul class="list-group">
      <li class="list-group-item <%= 'active' if params[:filter] == 'bookmarks' %>">
        <%= link_to raw("#{t('sidebar.home.bookmarks')} (<span id='bookmark_count'>#{@bookmark_count[:recipes] + @bookmark_count[:foodstuffs]}</span>)"), root_path(filter: 'bookmarks', view: @view), data: { turbo_frame: '_top' } %>
      </li>
      <li class="list-group-item <%= 'active' if params[:filter] == 'good' %>">
        <%= link_to raw("#{t('sidebar.home.good')} (<span id='good_count'>#{@good_count[:recipes] + @good_count[:foodstuffs]}</span>)"), root_path(filter: 'good', view: @view), data: { turbo_frame: '_top' } %>
      </li>
      <li class="list-group-item <%= 'active' if params[:filter] == 'bad' %>">
        <%= link_to raw("#{t('sidebar.home.bad')} (<span id='bad_count'>#{@bad_count[:recipes] + @bad_count[:foodstuffs]}</span>)"), root_path(filter: 'bad', view: @view), data: { turbo_frame: '_top' } %>
      </li>
      <li class="list-group-item <%= 'active' if params[:filter] == 'kitchen_tools' %>">
        <%= link_to raw("#{t('sidebar.home.kitchen_tools')} (<span id='kitchen_tools_count'>#{@kitchen_tools_count}</span>)"), root_path(filter: 'kitchen_tools', view: @view), data: { turbo_frame: '_top' } %>
      </li>
      <li class="list-group-item">
        <%= link_to t('sidebar.home.reset_filter'), root_path, data: { turbo_frame: '_top' } %>
      </li>
    </ul>
  </turbo-frame>
</div>

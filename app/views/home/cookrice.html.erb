<% content_for(:title, t('cookrice.title')) %>

<div class="cookrice-show d-flex flex-column gap-5">
  <!-- 目次 -->
  <div class="table-of-contents mb-5">
    <h2 class="contents-title"><%= t('cookrice.table_of_contents') %></h2>
    <ul class="list-group">
      <li class="list-group-item">
        <a href="#rice-cooker"><%= t('cookrice.rice_cooker') %></a>
      </li>
      <li class="list-group-item">
        <a href="#microwave"><%= t('cookrice.microwave') %></a>
      </li>
    </ul>
  </div>

  <!-- 炊飯器でご飯を炊く -->
  <div id="rice-cooker" class="cookrice-section d-flex gap-4">
    <!-- 左側: タイトルと説明 -->
    <div class="cookrice-info-container flex-1">
      <h1 class="cookrice-title"><%= t('cookrice.rice_cooker') %></h1>
      <p class="cookrice-description"><%= t('cookrice.description_rice_cooker') %></p>
    </div>

    <!-- 右側: 手順カード -->
    <div class="cookrice-steps-container flex-2 d-flex flex-wrap gap-4">
      <% 7.times do |i| %>
        <div class="cookrice-step card p-3 shadow-sm rounded text-center">
          <div class="step-number bg-primary text-white rounded-circle d-flex justify-content-center align-items-center mb-3" style="width: 40px; height: 40px; margin: 0 auto;">
            <%= i + 1 %>
          </div>
          <p class="step-text mb-2"><%= t("cookrice.step#{i + 1}") %></p>
          <%= image_tag "rice-cooker-step#{i + 1}.jpg", alt: t("cookrice.step#{i + 1}_image_alt"), class: "step-image img-fluid rounded shadow-sm" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- 電子レンジでご飯を炊く -->
  <div id="microwave" class="cookrice-section d-flex gap-4 flex-row-reverse">
    <!-- 左側: タイトルと説明 -->
    <div class="cookrice-info-container flex-1">
      <h1 class="cookrice-title"><%= t('cookrice.microwave') %></h1>
      <p class="cookrice-description"><%= t('cookrice.description_microwave') %></p>
    </div>

    <!-- 右側: 手順カード -->
    <div class="cookrice-steps-container flex-2 d-flex flex-wrap gap-4">
      <% 7.times do |i| %>
        <div class="cookrice-step card p-3 shadow-sm rounded text-center">
          <div class="step-number bg-primary text-white rounded-circle d-flex justify-content-center align-items-center mb-3" style="width: 40px; height: 40px; margin: 0 auto;">
            <%= i + 1 %>
          </div>
          <p class="step-text mb-2"><%= t("cookrice.microwave_step#{i + 1}") %></p>
          <%= image_tag "microwave-step#{i + 1}.jpg", alt: t("cookrice.microwave_step#{i + 1}_image_alt"), class: "step-image img-fluid rounded shadow-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

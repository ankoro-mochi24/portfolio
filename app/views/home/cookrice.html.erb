<% content_for(:title, t('cookrice.title')) %>

<div class="container my-5 cookrice-container">
  <!-- 目次セクション -->
  <section class="table-of-contents mb-5 text-center">
    <h2 class="contents-title mb-4"><%= t('cookrice.table_of_contents') %></h2>
    <ul class="list-inline d-flex justify-content-center gap-3">
      <li class="list-inline-item">
        <a href="#rice-cooker" class="btn btn-outline-primary px-4 py-2"><%= t('cookrice.rice_cooker') %></a>
      </li>
      <li class="list-inline-item">
        <a href="#microwave" class="btn btn-outline-success px-4 py-2"><%= t('cookrice.microwave') %></a>
      </li>
    </ul>
  </section>

  <!-- 炊飯器セクション -->
  <section id="rice-cooker" class="cookrice-section mb-5">
    <h2 class="cookrice-title text-primary mb-3"><%= t('cookrice.rice_cooker') %></h2>
    <p class="cookrice-description mb-4"><%= t('cookrice.description_rice_cooker') %></p>

    <div class="row g-4">
      <% 7.times do |i| %>
        <div class="col-md-4">
          <div class="card shadow-sm h-100 text-center p-3">
            <div class="step-number bg-primary text-white rounded-circle d-flex justify-content-center align-items-center mb-3" style="width: 50px; height: 50px; margin: 0 auto;">
              <%= i + 1 %>
            </div>
            <p class="step-text fw-bold mb-2"><%= t("cookrice.step#{i + 1}") %></p>
            <%= image_tag "rice-cooker-step#{i + 1}.jpg", alt: t("cookrice.step#{i + 1}_image_alt"), class: "step-image img-fluid rounded shadow-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <!-- 電子レンジセクション -->
  <section id="microwave" class="cookrice-section">
    <h2 class="cookrice-title text-success mb-3"><%= t('cookrice.microwave') %></h2>
    <p class="cookrice-description mb-4"><%= t('cookrice.description_microwave') %></p>

    <div class="row g-4">
      <% 7.times do |i| %>
        <div class="col-md-4">
          <div class="card shadow-sm h-100 text-center p-3">
            <div class="step-number bg-success text-white rounded-circle d-flex justify-content-center align-items-center mb-3" style="width: 50px; height: 50px; margin: 0 auto;">
              <%= i + 1 %>
            </div>
            <p class="step-text fw-bold mb-2"><%= t("cookrice.microwave_step#{i + 1}") %></p>
            <%= image_tag "microwave-step#{i + 1}.jpg", alt: t("cookrice.microwave_step#{i + 1}_image_alt"), class: "step-image img-fluid rounded shadow-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>

<!-- URL: /users/password/new -->
<h2><%= t('devise.passwords.new.title') %></h2>

<%= form_with model: resource, url: password_path(resource_name), method: :post, local: true, data: { turbo: false } do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, t('devise.passwords.new.email_label') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.passwords.new.submit') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

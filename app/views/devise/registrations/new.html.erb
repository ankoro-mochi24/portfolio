<h2><%= t('devise.registrations.new.title') %></h2>

<%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, t('activerecord.attributes.user.name') %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email, t('devise.registrations.new.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('devise.registrations.new.password') %>
    <% if @minimum_password_length %>
    <em>(<%= t('devise.registrations.new.minimum_password_length', count: @minimum_password_length) %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('devise.registrations.new.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.new.submit') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

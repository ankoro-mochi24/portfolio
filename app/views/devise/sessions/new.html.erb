<!-- URL: /users/sign_in -->
<h2><%= t('devise.sessions.new.title') %></h2>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
  <div class="field">
    <%= f.label :email, t('devise.sessions.new.email_label') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('devise.sessions.new.password_label') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t('devise.sessions.new.remember_me') %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('devise.sessions.new.submit') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

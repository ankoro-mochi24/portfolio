<!-- URL: /users/sign_in -->
<% content_for(:title, t('devise.sessions.new.content')) %>

<div class="login-overlay">
  <div class="login-modal shadow-lg rounded p-4">
    <div class="text-center">
      <h2 class="mb-4">
        <i class="bi bi-person-circle"></i>
        <%= t('devise.sessions.new.title') %>
      </h2>
    </div>

    <% if flash[:alert] %>
      <p class="alert alert-danger text-center"><%= flash[:alert] %></p>
    <% end %>

    <% if flash[:notice] %>
      <p class="alert alert-success text-center"><%= flash[:notice] %></p>
    <% end %>

    <%= form_with model: @user, url: session_path(resource_name), local: true, data: { turbo: false }, class: "needs-validation" do |f| %>
      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-envelope"></i></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('devise.sessions.new.email_label') %>
        </div>
      </div>

      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-lock"></i></span>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: t('devise.sessions.new.password_label'), oncopy: "return false;", oncut: "return false;", onpaste: "return false;" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, t('devise.sessions.new.remember_me'), class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit t('devise.sessions.new.submit'), class: "btn btn-primary btn-block btn-login" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
